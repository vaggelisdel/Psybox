                                    <img src="{{this.postImage}}" alt="Post">
                                </div>
                            {{/if}}
                        </div>
                        <div class="post-meta-wrap">
                            <div class="post-meta openModalPost" data-postid="{{this._id}}">
                                <div class="meta-text"><span
                                        id="reactions_count_{{this._id}}">{{this.countReactions}}</span> Reactions
                                </div>
                                <div class="meta-text">2 Comments</div>
                                <div class="meta-text">5 Share</div>
                            </div>
                        </div>
                    </div>
                    <div class="post-footer">
