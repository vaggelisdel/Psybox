<div class="login-form-wrap">
    <div class="tab-content">
        <div class="tab-pane login-tab fade show active" id="login-tab" role="tabpanel">
            <h3 class="item-title">Forgot <span>your password?</span></h3>
            <form action="/changePassword" method="post">
                <div class="form-group">
                    <input type="text" class="form-control" name="email" readonly value="{{email}}" placeholder="Your E-mail">
                    <input type="hidden" name="socialID" value="{{socialID}}">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" name="newpassword" placeholder="New Password">
                </div>
                <div class="form-group">
                    <input type="submit" name="login-btn" class="submit-btn" value="Reset Password">
                </div>
            </form>
